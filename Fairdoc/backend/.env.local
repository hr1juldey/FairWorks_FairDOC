# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================

# Override for local development
ENVIRONMENT=local
DEBUG=true
API_PORT=8000

# Local development security (not secure - for dev only)
SECRET_KEY=local-dev-secret-key-not-secure

# Local Ollama (smaller models for development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_CLINICAL=mistral:7b
OLLAMA_MODEL_CHAT=neural-chat:7b
OLLAMA_MODEL_CLASSIFICATION=neural-chat:7b

# Local databases
CHROMA_PERSIST_DIRECTORY=./data/local/chromadb
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Development-friendly settings
ML_BATCH_SIZE=2
OLLAMA_TIMEOUT=120
WS_MAX_CONNECTIONS=10

# Logging
LOG_LEVEL=DEBUG
LOG_TO_FILE=true
